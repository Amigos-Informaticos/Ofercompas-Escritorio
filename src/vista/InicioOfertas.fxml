<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.controlador.InicioOfertasController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <left>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" styleClass="right-bar" stylesheets="@estilo/estilo.css" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Ofercompas" textFill="WHITE">
                           <font>
                              <Font name="System Bold Italic" size="25.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <MenuButton fx:id="menuPublicar" mnemonicParsing="false" prefWidth="150.0" styleClass="comboBox" stylesheets="@estilo/estilo.css" text="Publicar">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#clicPublicarOferta" text="Oferta" />
                      <MenuItem mnemonicParsing="false" onAction="#clicPublicarCodigo" text="Código" />
                    </items>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </MenuButton>
                  <MenuButton fx:id="menuPerfil" mnemonicParsing="false" prefWidth="150.0" styleClass="comboBox" text="Mi perfil">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#clicMisOfertas" text="Mis ofertas" />
                        <MenuItem mnemonicParsing="false" onAction="#clicMisCodigos" text="Mis códigos" />
                        <MenuItem mnemonicParsing="false" onAction="#clicEditarPerfil" text="Editar Perfil" />
                        <MenuItem mnemonicParsing="false" onAction="#clicCerrarSesion" text="Cerrar sesión" />
                     </items>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </MenuButton>
                  <Button mnemonicParsing="false" onAction="#cambiarACodigos" prefWidth="150.0" styleClass="add-btn" text="Ir a Códigos">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <ComboBox fx:id="cmbCategoria" prefWidth="150.0" promptText="Categoría" styleClass="comboBox" stylesheets="@estilo/estilo.css">
                     <VBox.margin>
                        <Insets top="30.0" />
                     </VBox.margin></ComboBox>
                  <Button mnemonicParsing="false" onAction="#buscarPorCategoria" prefWidth="150.0" styleClass="add-btn" text="Aplicar filtro">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="btnReporteUsuarios" mnemonicParsing="false" onAction="#clicVerReporteUsuarios" prefWidth="150.0" styleClass="add-btn" text="Ver reporte de usuarios">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </left>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <ScrollPane fx:id="scroll" prefHeight="407.0" prefWidth="400.0">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                     <content>
                        <VBox fx:id="vbox" prefHeight="298.0" prefWidth="388.0" />
                     </content>
                  </ScrollPane>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0">
                     <children>
                        <Button fx:id="btnAnterior" mnemonicParsing="false" onAction="#retrcoderPagina" prefHeight="25.0" prefWidth="70.0" text="Anterior">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Label fx:id="lblPagina" text="1" />
                        <Button fx:id="btnSiguiente" mnemonicParsing="false" onAction="#avanzarPagina" prefHeight="25.0" prefWidth="70.0" text="Siguiente">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Button>
                     </children></HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
